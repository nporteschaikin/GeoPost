%main.Area
  
  %header
    %div
    %hgroup
      %h1
        %i.map
        #{area.label}
      %h4 within #{pluralize area.radius, "mile"} of #{area.address}
  
  %script{type: "text/javascript"}
    \//<![CDATA[
    var area = new M('main.Area > header > div', #{area.bounds}, '');
    \//]]>
    
  %div
    = render area.posts.listing, area: area, map: "area"